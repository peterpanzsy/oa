<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="cn.wangan.domain">

	<class name="Book" table="book">
		<id name="id" type="java.lang.Long" length="100">
            <generator class="native"/>
		</id>
		<property name="name" type="java.lang.String" length="100">	</property>
		<property name="publish" type="java.lang.String" length="100"></property>
		<property name="bookcase" type="java.lang.String" length="100"></property>
		<property name="author" type="java.lang.String" length="100"></property>
		<property name="time" type="java.lang.String" length="100"></property>
	</class>
	
</hibernate-mapping>

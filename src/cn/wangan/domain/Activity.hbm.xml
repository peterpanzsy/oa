<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="cn.wangan.domain">

	<class name="Activity" table="activity">
		<id name="id" type="java.lang.Long" length="100">
            <generator class="native"/>
		</id>
		<property name="title" type="java.lang.String" length="100">	</property>
		<property name="date" type="java.util.Date" length="100"></property>
		<property name="place" type="java.lang.String" length="100"></property>
		<property name="summary" type="java.lang.String" length="100"></property>
		<property name="number" type="java.lang.Integer" length="100"></property>
		<property name="type" type="java.lang.String" length="100"></property>

		
	</class>
	
</hibernate-mapping>
